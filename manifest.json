{
  "manifest_version": 3,
  "name": "Insight+ for Firefish",
  "short_name": "Insight+ Firefish",
  "version": "1.1.0",
  "version_name": "1.1.0 - Portfolio Overview",
  "author": "Hans Weber",
  "description": "Enhanced user experience for Firefish.io",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://app.firefish.io/*",
    "https://api.coingecko.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.firefish.io/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Insight+ for Firefish",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://app.firefish.io/*"]
    },
    {
      "resources": ["qrs/*"],
      "matches": ["https://app.firefish.io/*"]
    }
  ]
}


